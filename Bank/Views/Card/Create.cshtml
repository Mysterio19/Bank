@{
    Layout = "../Shared/_Layout.cshtml";
}
@model Bank.Web.ViewModels.CardViewModel

<div class="row m-20">
    <div class="col-5">
        <h2>@CommonResources.CreateCard</h2>
    </div>    
</div>

<form asp-action="Create" asp-controller="Card" asp-anti-forgery="true">
    <div class="form-group">
        <label asp-for="Name">@CommonResources.EnterCardName</label>
        <input class="form-control" type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="CashbackPercent">@CommonResources.CashbackPercent</label>
        <input readonly="readonly" class="form-control" type="number" value="12" asp-for="CashbackPercent" />
        <span asp-validation-for="CashbackPercent" class="text-danger" />
    </div>
    <div class="form-group">
        <div class="validation" asp-validation-summary="ModelOnly" />
    </div>
    <div>
        <input type="submit" class="btn btn-success" value="Sign up" />
    </div>
</form>