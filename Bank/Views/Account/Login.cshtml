@{
    Layout = "../Shared/_Layout.cshtml";
}
@model Bank.Web.ViewModels.LoginModel
 

<div class="row m-20">
    <div class="col-6">
        <h2>@CommonResources.ApplicationName</h2>
    </div>
</div>

<div class="row">
   
    <div class="col-md-8 col-sm-8 col-xs-12">
       
        @await Html.PartialAsync("_LoginCard", 
            new { Image=CommonResources.LoginCard1Image , 
            Description = CommonResources.LoginCard1Description, 
                Title = CommonResources.LoginCard1Title})
        
        @await Html.PartialAsync("_LoginCard", 
            new { Image=CommonResources.LoginCard2Image , 
                Description = CommonResources.LoginCard2Description, 
                Title = CommonResources.LoginCard2Title})
        
        @await Html.PartialAsync("_LoginCard", 
            new { Image=CommonResources.LoginCard3Image , 
                Description = CommonResources.LoginCard3Description, 
                Title = CommonResources.LoginCard3Title})
        
        @await Html.PartialAsync("_LoginCard", 
            new { Image=CommonResources.LoginCard4Image , 
                Description = CommonResources.LoginCard4Description, 
                Title = CommonResources.LoginCard4Title})

    </div>
    
    <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="card">
            <h3 class="card-title text-center" style="padding: 20px 0">@CommonResources.LoginToBank</h3>
            <div class="card-body">
                <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly" />
                    <div>
                        <div class="form-group">
                            <label asp-for="UserName">@CommonResources.EnterUserName</label>
                            <input class="form-control" type="text" asp-for="UserName" />
                            <span asp-validation-for="UserName" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">@CommonResources.EnterPassword</label>
                            <input class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="@CommonResources.Login" class="btn btn-success" />
                        </div>
                        <div class="form-group">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                    </div>
                </form>
            </div>
            <a asp-action="Register">@CommonResources.Register</a>    
        </div>
    </div> 
</div>

